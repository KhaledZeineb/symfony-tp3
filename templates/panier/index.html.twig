{# templates/panier/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Votre panier{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="mb-4">Votre panier</h1>
    
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    
    {% if panier.elements|length > 0 %}
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Produit</th>
                        <th>Prix unitaire</th>
                        <th>Quantité</th>
                        <th>Sous-total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for element in panier.elements %}
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="{{ asset('images/' ~ element.image) }}" alt="{{ element.nomProduit }}" style="width: 50px; height: 50px; object-fit: cover; margin-right: 10px;">
                                    {{ element.nomProduit }}
                                </div>
                            </td>
                            <td>{{ element.prix|number_format(2, '.', ' ') }} TND</td>
                            <td>
                                <form class="d-flex" action="{{ path('app_panier_modifier_quantite', {'id': element.id}) }}" method="post">
                                    <input type="number" name="quantite" value="{{ element.quantite }}" min="1" class="form-control form-control-sm" style="width: 70px;" onchange="this.form.submit()">
                                </form>
                            </td>
                            <td>{{ element.sousTotal|number_format(2, '.', ' ') }} TND</td>
                            <td>
                                <a href="{{ path('app_panier_supprimer', {'id': element.id}) }}" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i> Supprimer
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" class="text-end"><strong>Total:</strong></td>
                        <td><strong>{{ panier.total|number_format(2, '.', ' ') }} TND</strong></td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        </div>
        
        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('app_panier_vider') }}" class="btn btn-outline-danger">
                Vider le panier
            </a>
            <a href="{{ path('app_index') }}" class="btn btn-outline-secondary">
                Continuer mes achats
            </a>
            <a href="#" class="btn btn-success">
                Procéder au paiement
            </a>
        </div>
    {% else %}
        <div class="alert alert-info">
            Votre panier est vide. <a href="{{ path('app_index') }}">Commencer votre shopping</a>
        </div>
    {% endif %}
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Mettre à jour automatiquement le panier lors du changement de quantité
            const inputsQuantite = document.querySelectorAll('input[name="quantite"]');
            inputsQuantite.forEach(input => {
                input.addEventListener('change', function() {
                    this.form.submit();
                });
            });
        });
    </script>
{% endblock %}