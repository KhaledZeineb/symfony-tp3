{# templates/pages/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Accueil - TuniShop{% endblock %}

{% block body %}
    <div class="homepage">
        <header class="hero-section text-center py-5 bg-light">
            <img src="{{ asset('images/logo.png') }}" alt="Logo TuniShop" class="logo-home">
            <h1 class="mt-3 display-4">Bienvenue sur <span class="text-primary">TuniShop</span> üõçÔ∏è</h1>
            <p class="lead text-muted">D√©couvrez l'artisanat tunisien authentique et bien plus encore.</p>
            <a href="{{ path('app_about') }}" class="btn btn-primary btn-lg mt-4">√Ä propos</a>
        </header>
        
        <section class="featured-products py-5">
            <div class="container">
                <h2 class="text-center mb-5">Produits en vedette</h2>
                
                <div class="product-grid row g-4">
                    {% for produit in produits %}
                    <div class="col-md-3">
                        <div class="product-card card h-100">
                            <img src="{{ asset('images/' ~ produit.image) }}"
                                 alt="{{ produit.nom }}"
                                 class="card-img-top product-image">
                            <div class="card-body">
                                <h3 class="card-title h5">{{ produit.nom }}</h3>
                                <p class="card-text text-muted">{{ produit.description }}</p>
                                <p class="text-primary fw-bold">{{ produit.prix|number_format(2, '.', ' ') }} TND</p>
                                <button class="btn btn-success add-to-cart-btn w-100"
                                        data-id="{{ produit.id }}">
                                    <i class="fas fa-shopping-cart me-2"></i>Ajouter au panier
                                </button>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </section>
        
        <div id="panier-notification" class="alert alert-success position-fixed bottom-0 end-0 m-3" style="display: none;">
            <i class="fas fa-check-circle me-2"></i> Produit ajout√© au panier!
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/main.js') }}"></script>
{% endblock %}