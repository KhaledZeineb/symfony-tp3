{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Mon Site{% endblock %}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('app_home') }}">Mon Site</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_index') }}">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_about') }}">√Ä propos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_connexion') }}">Connexion</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_inscription') }}">Inscription</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- üé• Vid√©o de pr√©sentation (affichage seulement sur la page d'accueil) -->
    {% if app.request.pathinfo == path('app_home') %}
        <div class="container-fluid p-0">
            <video autoplay muted loop style="width: 100%; height: auto; max-height: 500px; object-fit: cover;">
                <source src="{{ asset('videos/video1.mp4') }}" type="video/mp4">
                Votre navigateur ne supporte pas la vid√©o HTML5.
            </video>
        </div>
    {% endif %}

    <!-- Contenu Principal -->
    <div class="container mt-4">
        {% block body %}
        {% endblock %}
    </div>

    <!-- Footer -->
    <footer class="bg-light text-center w-100 py-3 mt-4">
        <p class="mb-0">&copy; 2025 - Mon Site Web</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>